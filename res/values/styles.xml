<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:typeface">serif</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:buttonStyle">@style/MyButton</item>
        <item name="android:imageButtonStyle">@style/MyImageButton</item>
    </style>

    <style name="MyActionBar" parent="@android:Widget.Holo.ActionBar">
        <item name="android:background">@color/custom_actionbar_color</item>
        <item name="android:titleTextStyle">@style/MyTitleText</item>
        <item name="android:indeterminateProgressStyle">@style/MyIndeterminateProgressStyle</item>
    </style>

    <style name="MyTitleText" parent="@android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/custom_actionbar_text_color</item>
    </style>

    <style name="MyIndeterminateProgressStyle" parent="@android:style/Widget.ProgressBar.Small">
    </style>
    
    <style name="MyButton" parent="@android:Widget.Holo.Button">
        <item name="android:background">@drawable/buttonpositive</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:minWidth">64dip</item>
        <item name="android:textColor">@color/custom_actionbar_text_color</item>
    </style>
    
    <style name="MyPositiveButton" parent="@android:Widget.Holo.Button">
        <item name="android:background">@drawable/btn_positive</item>
        <item name="android:minHeight">24dip</item>
        <item name="android:minWidth">32dip</item>
        <item name="android:textColor">@color/custom_actionbar_text_color</item>
    </style>
    
    <style name="MyNegativeButton" parent="@android:Widget.Holo.Button">
        <item name="android:background">@drawable/button</item>
        <item name="android:minHeight">24dip</item>
        <item name="android:minWidth">32dip</item>
        <item name="android:textColor">@color/negative_btn_text_color</item>
    </style>

    <style name="MyImageButton" parent="@android:Widget.ImageButton">
        <item name="android:background">@drawable/simpletwitter_btn_default_holo_light</item>
        <item name="android:textColor">@color/custom_actionbar_text_color</item>
    </style>

</resources>